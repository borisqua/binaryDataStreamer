-# coding: UTF-8
!!! 5
%html
  -#html
  %head
    -#head
    %title
      Carousel
    %script(src="js/lib/jquery-3.2.0.min.js")
    %script(src="js/lib/TweenMax.min.js")
    %script(src="js/lib/TimelineMax.min.js")
    %script(src="js/carousel.js" type="text/javascript")
    %link(rel="stylesheet" type="text/css" href="css/styles.css" media="all" )
  %body
    -#body
    %header
      -#header
    %main
      -#top level canvas
      %form.controller(id="monitor" )
        -#output monitor
        %label(for="inputField") input
        %input.output(type="text" value="" id="inputField")
      #left
        left pane
      #viewport
        -#carousel keyboard
        -#- (1..3).each do |i|
        -#  - (1..10).each do |j|
        -#    %div.key{:id=>"symbox#{j*10+i}", :class=>"r#{i} c#{j}"} {#{i}; #{j}}
      %label(for="controller")
        CONTROLS
        -##timestamp
      %form.controller(id="controller")
        %fieldset(class="sliders" )
          %legend
            speed parameters
          .inputbox
            %label(for="randomSpeed0" ) scale
            %label(for="randomSpeed0" ) random
            %label(for="randomSpeed0" ) reverse
          .inputbox
            %label.centered(for="speedSlider0" ) row 1
            %input.centered.ui-slider(type="range" min="0" max="1" step="0.01" value="0.8" id="speedSlider0" index="0")
            %input#speedValue0.value(value="0.8" index="0")
            %label(for="randomSpeed0" ) &nbsp;
            %input.rnd(type="checkbox" id="randomSpeed0" )
            %label(for="reverseMovement0" ) &nbsp;
            %input.rnd(type="checkbox" id="reverseMovement0" )
            %label(for="reverseMovement0" ) &nbsp;
          .inputbox
            %label.centered(for="speedSlider1" ) row 2
            %input.centered.ui-slider(type="range" min="0" max="1" step="0.01" value="0.3" id="speedSlider1" index="1")
            %input#speedValue1.value(value="0.3" index="1")
            %label(for="randomSpeed1" ) &nbsp;
            %input.rnd(type="checkbox" id="randomSpeed1" )
            %label(for="reverseMovement1" ) &nbsp;
            %input.rnd(type="checkbox" id="reverseMovement1" )
            %label(for="reverseMovement1" ) &nbsp;
          .inputbox
            %label.centered(for="speedSlider2" ) row 3
            %input.centered.ui-slider(type="range" min="0" max="1" step="0.01" value="0.5" id="speedSlider2" index="2")
            %input#speedValue2.value(value="0.5"  index="2")
            %label(for="randomSpeed2" ) &nbsp;
            %input.rnd(type="checkbox" id="randomSpeed2" )
            %label(for="reverseMovement2" ) &nbsp;
            %input.rnd(type="checkbox" id="reverseMovement2" )
            %label(for="reverseMovement2" ) &nbsp;
          -#.inputbox( style="visibility: hidden" )
          -#  %label.centered(for="duration" ) duration
          -#  %input.centered(type="range" id="duration" )
          -#  %input#durationvalue.value
          -#.inputbox( style="visibility: hidden" )
          -#  %button(id="reverse")
          -#    reverse
        %fieldset(class="effects")
          %legend
            effects
          .inputbox
            %label(for="bezier" ) add bezier path
            %input(type="checkbox" id="bezier" )
          .inputbox
            %label(for="easing" )
              easing
            %select(id="easing")
              %option
                linear
              %option
                swing
              %option
                rough
              %option
                slow motion
              %option
                stepped
          .inputbox
            %button(id="restart")
              restart
          .inputbox
        %fieldset(class="stimuli")
          %legend
            stimuli
          .inputbox
            %label(for="effect")
              stimulus type
            %select(id="effect")
              %option
                shine
              %option
                turn
              %option
                shake
          .inputbox
          .inputbox
          .inputbox

    %footer
      footer
